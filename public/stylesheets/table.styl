.statsTable
	margin 30px
	padding 0px
	width auto
	box-shadow 10px 10px 5px #888888
	border 1px solid #000000
	border-radius-bottomleft 0px
	border-bottom-left-radius 0px
	borderleft-radius 0px
	border-radius-bottomright 0px
	border-bottom-right-radius 0px
	borderright-radius 0px
	border-radius-topright 0px
	border-top-right-radius 0px
	border-radius-topleft 0px
	border-top-left-radius 0px
	table
		border-collapse collapse
		border-spacing 0
		width 100%
		height 100%
		margin 0px
		padding 0px
		tr
			&:first-child
				td
					&:first-child
						border-radius-topleft 0px
						border-top-left-radius 0px
						borderleft-radius 0px
					&:last-child
						border-radius-topright 0px
						border-top-right-radius 0px
						borderright-radius 0px
	tr
		&:last-child
			td
				border-width 0px 1px 0px 0px
				&:last-child
					border-radius-bottomright 0px
					border-bottom-right-radius 0px
					borderright-radius 0px
					border-width 0px 0px 0px 0px
				&:first-child
					border-radius-bottomleft 0px
					border-bottom-left-radius 0px
					borderleft-radius 0px
		&:nth-child(odd)
			background-color #aad4ff
		&:nth-child(even)
			background-color #ffffff
		td
			&:last-child
				border-width 0px 0px 1px 0px
		&:first-child
			td
				background linear-gradient(bottom, #005fbf 5%, #003f7f 100%)
				background -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #005fbf), color-stop(1, #003f7f) )
				background linear-gradient( center top, #005fbf 5%, #003f7f 100% )
				filter unquote('progid:DXImageTransform.Microsoft.gradient(startColorstr="#005fbf", endColorstr="#003f7f")')
				background linear-gradient(top,#005fbf,003f7f)
				background-color #005fbf
				border 0px solid #000000
				text-align center
				border-width 0px 0px 1px 1px
				font-size 14px
				font-family Arial
				font-weight bold
				color #ffffff
				&:first-child
					border-width 0px 0px 1px 0px
				&:last-child
					border-width 0px 0px 1px 1px
			&:hover
				td
					background linear-gradient(bottom, #005fbf 5%, #003f7f 100%)
					background -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #005fbf), color-stop(1, #003f7f) )
					background linear-gradient( center top, #005fbf 5%, #003f7f 100% )					
					background linear-gradient(top,#005fbf,003f7f)
					background-color #005fbf
					filter unquote('progid:DXImageTransform.Microsoft.gradient(startColorstr="#005fbf", endColorstr="#003f7f")')
	td
		vertical-align middle
		border 1px solid #000000
		border-width 0px 1px 1px 0px
		text-align left
		padding 7px
		font-size 10px
		font-family Arial
		font-weight normal
		color #000000

