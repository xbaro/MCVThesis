body, html
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  border: 0
  padding: 0
  margin: 0
  height: 100%

a
  color: #000;
  margin: 10px;

body 
  background: #a79d9b
  display: flex
  justify-content: center
  align-items: center
  font-size: 16px
  overflow: scroll

form 
  background: white
  width: 40%
  box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.7)
  font-family: lato
  position: relative
  color: #333
  border-radius: 10px

form header 
  background: #f28c09
  padding: 30px 20px
  color: white
  font-size: 1.2em
  font-weight: 600
  border-radius: 10px 10px 0 0

form label 
  margin-left: 20px
  display: inline-block
  margin-top: 30px
  margin-bottom: 5px
  position: relative

form label span
  color: #FF3838
  font-size: 2em
  position: absolute
  left: 2.3em
  top: -10px

form input 
  display: block
  width: 78%
  margin-left: 20px
  padding: 5px 20px
  font-size: 1em
  border-radius: 3px
  outline: none
  border: 1px solid #ccc

form button 
  position: relative
  margin-top: 30px
  margin-bottom: 30px
  margin-left: 15px;
  font-family: inherit
  color: white;
  background: #423a2f
  outline: none
  border: none
  padding: 5px 15px
  font-size: 1.3em
  font-weight: 400
  border-radius: 3px
  box-shadow: 0px 0px 10px rgba(51, 51, 51, 0.4)
  cursor: pointer
  transition: all 0.15s ease-in-out

form button:hover 
  background: #6fc343

.container 
  background: white
  width: 80%
  box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.7)
  font-family: lato
  position: relative
  color: #333
  border-radius: 10px

.container header 
  background: #f28c09
  padding: 30px 20px
  color: white
  font-size: 1.2em
  font-weight: 600
  border-radius: 10px 10px 0 0

.container .body
  width: auto
  padding: 30px
  overflow: scroll
  height: 600px

.logout
  position:absolute
  right:0

.center
  margin: 0 auto
  width: 800px
    
@import 'table.styl'