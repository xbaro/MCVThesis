extends auth_layout

block content
    .top-content
        .inner-bg
            .container
                .row
                    .col-sm-8.col-sm-offset-2.text
                        h1
                            strong Master on Computer Vision
                        .description
                            p
                                Application Management of final master thesis
                .row
                    .col-sm-6.col-sm-offset-3.form-box
                        .form-top
                            .form-top-left
                                h3 Login required
                                p Enter your username and password to log on:
                            .form-top-right
                                i.fa.fa-lock
                        .form-bottom
                            if errorMessage
                                .alert.alert-error
                                    | #{errorMessage}
                            form(role='form', action="/auth/signin",method="post")
                                .form-group
                                    label.sr-only(for="username") Username
                                    input#username.form-control(type='text', name="username", placeholder='Enter Username', required=true)
                                .form-group
                                    label.sr-only(for="password") Password
                                    input#password.form-password.form-control(type='password', name="password", placeholder='Password', required=true)
                                .btn-group
                                    button.btn.btn-default(type='submit') Login
                                .btn-group
                                    a(href='/')
                                        button.btn.btn-danger(type="button") Cancel
